{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["es2017", "dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "public", ".cache"]
}
