{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "content/*": ["src/content/*"],
      "shared/*": ["src/shared/*"],
      "global": ["src/global.d.ts"],
      "static/*": ["static/*"]
    },
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["es2017", "dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true
  },
  "include": ["src", "static", "content"],
  "exclude": ["node_modules", "public", ".cache"]
}
